package {	import flash.display.MovieClip;	import flash.utils.getTimer;	import flash.utils.Timer;	import flash.events.Event;	import flash.events.MouseEvent;		public class Star extends MovieClip {		var previousTime: int = 0;		var speedX: Number = Math.floor(Math.random() * (1 + (50) - (-50))) + (-50);		var speedY: Number = 0;		var speedRotation: Number = 0;		var gravity: Number = 9.8;		var click: Boolean;				public function Star() {			this.previousTime = getTimer();			this.speedY = 200.0 + Math.random() * 300;			this.speedRotation = 100.0 + Math.random() * 80;			this.addEventListener(Event.ENTER_FRAME, OnEnterFrame);			this.addEventListener(MouseEvent.CLICK, OnClick);		}				protected function OnClick(e: MouseEvent): void {			if(this.y > 360 && speedY>0){			speedY *= -1;			click = true;}		}		protected function OnEnterFrame(e: Event): void {			var currentTime: int = getTimer();			var dt: Number = (currentTime - this.previousTime) * 0.001;			this.speedY += this.gravity * dt;			this.y += dt * speedY*.5;			this.x += dt * speedX;						if (this.x < 25) speedX *= -1;			if (this.x > 475) speedX *= -1;							if(click == true && this.y<0){					speedY *= -1;					click=false;}			if(click == true && this.y > 360)					click=false;			if (click == false) {				//if (this.y > 360) speedY *= -1;				if (this.y < 0) speedY *= -1;			}						this.rotation += this.speedRotation * dt;			this.previousTime = currentTime;			if (this.y > 600) this.Stop();		}		public function Stop(): void {			this.removeEventListener(Event.ENTER_FRAME, OnEnterFrame);		}	}}